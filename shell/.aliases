if [[ "${domain}" != *":"* ]]; then
  domain="${domain}:443"
fi
openssl s_client -connect "${domain}" </dev/null 2>/dev/null | openssl x509 -noout -text
}

# Add this to your .bashrc or .zshrc file
clone() {
    # Check if a URL was provided
    if [ $# -lt 1 ]; then
        echo "Usage: clone <git-repository-url>"
        return 1
    fi

    # Get the repository URL
    REPO_URL="$1"

    # Base directory for repositories
    BASE_DIR=~/Developer

    # Function to extract the target directory from the URL
    get_target_dir() {
        local url="$1"
        local target_dir

        # Remove .git extension if present
        url=${url%.git}

        # Handle SSH URLs (git@github.com:org/repo)
        if [[ $url == git@* ]]; then
            # Convert git@github.com:org/repo to github.com/org/repo
            local domain=$(echo $url | cut -d '@' -f2 | cut -d ':' -f1)
            local path=$(echo $url | cut -d ':' -f2)
            target_dir="$BASE_DIR/$domain/$(dirname $path)/$(basename $path)"
        else
            # Handle HTTPS URLs (https://github.com/org/repo)
            # Remove protocol prefix
            local url_without_protocol=${url#*://}
            target_dir="$BASE_DIR/$url_without_protocol"
        fi

        echo "$target_dir"
    }

    # Get the target directory
    TARGET_DIR=$(get_target_dir "$REPO_URL")
    REPO_NAME=$(basename "$TARGET_DIR")
    PARENT_DIR=$(dirname "$TARGET_DIR")

    echo "Cloning $REPO_URL to $TARGET_DIR"

    # Create parent directory if it doesn't exist
    mkdir -p "$PARENT_DIR"

    # Clone the repository
    git clone "$REPO_URL" "$TARGET_DIR"

    # Check if the clone was successful
    if [ $? -eq 0 ]; then
        echo "Clone successful!"
        # Change to the repository directory
        cd "$TARGET_DIR"
    else
        echo "Clone failed!"
        return 1
    fi
}

###################################################################
#                         SSH-AGENT STUFF                         #
# (found and slightly adapted from http://superuser.com/a/141241) #
###################################################################
function sshagent_findsockets() {
find /tmp /var/folders -uid $(id -u) -type s -name agent.\* 2> /dev/null
}

function sshagent_testsocket {
if ! command -v ssh-add > /dev/null; then
    echo "ssh-add is not available; agent testing aborted"
    return 1
fi

if [ -n "$1" ]; then
    export SSH_AUTH_SOCK=$1
fi

if [ -z "$SSH_AUTH_SOCK" ]; then
    return 2
fi

if [ -S $SSH_AUTH_SOCK ]; then
    ssh-add -l > /dev/null 2> /dev/null
    if [ $? = 2 ]; then
        echo "Socket $SSH_AUTH_SOCK is dead! Deleting!"
        rm -f $SSH_AUTH_SOCK
        return 4
    else
        echo "Found ssh-agent $SSH_AUTH_SOCK"
        return 0
    fi
else
    echo "$SSH_AUTH_SOCK is not a socket!"
    return 3
fi
}

function sshagent_init {
# ssh agent sockets can be attached to a ssh daemon process or an
# ssh-agent process
AGENTFOUND=0

# Attempt to find and use the ssh-agent in the current environment
if sshagent_testsocket; then AGENTFOUND=1; fi

# if there is no agent in the environment, search /tmp for possible
# agents to reuse before starting a fresh ssh-agent process
if [ $AGENTFOUND = 0 ]; then
    for agentsocket in $(sshagent_findsockets); do
        if [ $AGENTFOUND != 0 ]; then break; fi
        if sshagent_testsocket $agentsocket; then AGENTFOUND=1; fi
    done
fi

# if at this point, we still haven't located an agent, it's time to
# start a new one
if [ $AGENTFOUND = 0 ]; then
    eval "$(ssh-agent -s)"
fi

# Clean up
unset AGENTFOUND
unset agentsocket

# Finally, show what keys are currently in the agent
ssh-add -l
}

alias sagent="sshagent_init"

